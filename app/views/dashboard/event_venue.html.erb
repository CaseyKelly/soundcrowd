<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script>facebookShare();</script>

  <div class="row">
    <div class="col-md-3">
      <center>
        <h6>Upcoming Events at <%= @yelp_info.businesses.first.name %></h6>
      </center>
      <ul class="list-group">
        <% @events.each do |event| %>
          <li class="list-group-item">
              <center><h3><%= event["artists"].first["name"] %></h3>
              <h3>
                <div class="pull-right">
                  <div id= "<%= event["url"] %>">  </div>
                  <div class="fb-share-button" data-href="<%= event["url"] %>" data-layout="button"></div>
                  <% if event["ticket_status"] == "available" %>
                    <h1><a href="<%= event["ticket_url"] %>"><i class="fa fa-ticket"></i></a></h1>
                    <% end %>
                </div>
              </h3>
              <h5><%= event["datetime"].to_datetime.strftime("%B %-d, %Y, %-l:%M %p") %></h5>
              <h5>at <%= link_to event["venue"]["name"], "/venue?venue=#{event["venue"]["name"]}&city=#{event["venue"]["city"]}&region=#{event["venue"]["region"]}&venueid=#{event["venue"]["id"]}" %></h5>
              <h5><%= event["venue"]["city"] %>, <%= event["venue"]["region"] %></h5></center>
            <% end %>
          </li>
      </ul>
    </div>

    <div class="col-md-9">
      <div class="page-header">
        <h1><%= image_tag "#{@yelp_info.businesses.first.image_url}" %> <%= @yelp_info.businesses.first.name %>
          <%= image_tag "#{@yelp_info.businesses.first.rating_img_url_large}" %>
      </div>
      <div class="row">
        <div class="col-md-9">
          <h3> <%= link_to "Checkout this Venue on Yelp", "#{@yelp_info.businesses.first.url}" %> </h3>
          <h4> <%= @yelp_info.businesses.first.display_phone %> </h4>
              <div id="map" style='width: 1000px; height: 800px;'></div>
            <script type="text/javascript">
            handler = Gmaps.build('Google');
            handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
              markers = handler.addMarkers(<%=raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
            });
            </script>
        </div>
      </div>
    </div>

  </div>

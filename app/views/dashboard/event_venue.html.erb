<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script>facebookShare();</script>

<div class="row">
  <div class="col-md-3" style="left: 15px">
    <center>
      <h6>Upcoming Events at <%= @yelp_info.businesses.first.name %></h6>
    </center>
    <ul class="list-group">
      <% @events.each do |event| %>
      <li class="list-group-item">
        <div class="well">
          <div class="row">
            <div class="col-md-8">
              <center>
                <h3><%= event["artists"].first["name"] %></h3>
                <h5><%= event["datetime"].to_datetime.strftime("%B %-d, %Y, %-l:%M %p") %></h5>
                <h5>at <%= event["venue"]["name"] %></h5>
                <h5><%= event["venue"]["city"] %>, <%= event["venue"]["region"] %></h5>
                <h6> <%= image_tag "#{event["artists"].first["thumb_url"]}" %> </h6>
                <!-- <h5><% event["venue"]["latitude"] %> <% event["venue"]["longitude"] %></h5> -->
              </center>
            </div>
            <div class="col-md-4">
              <h3>
                <div class="pull-right">
                  <div id= "<%= event["url"] %>">  </div>
                  <div class="fb-share-button" data-href="<%= event["url"] %>" data-layout="button"></div>
                  <% if event["ticket_status"] == "available" %>
                  <h1><a href="<%= event["ticket_url"] %>"><i class="fa fa-ticket"></i></a></h1>
                  <% end %>
                </div>
              </h3>
            </div>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="col-md-9">
    <div class="page-header">
      <div class="row">
        <div class="col-md-8">
          <h1><%= image_tag "#{@yelp_info.businesses.first.image_url}" %> <%= @yelp_info.businesses.first.name %> <%= image_tag "#{@yelp_info.businesses.first.rating_img_url_large}" %></h1>
        </div>
        <div class="col-md-4">
          <h3> <%= link_to "Checkout this Venue on Yelp", "#{@yelp_info.businesses.first.url}" %> </h3>
          <h4> <%= @yelp_info.businesses.first.display_phone %> </h4>
          <h5> <%= @yelp_info.businesses.first.location.display_address[0] %> </h5>
          <h5> <%= @yelp_info.businesses.first.location.display_address[1] %> </h5>
          <!-- <h5> <% @yelp_info.businesses.first.location.coordinate.latitude %> <% @yelp_info.businesses.first.location.coordinate.longitude %> </h5> -->

        </div>
      </div>
    </div>
    <div id="map" style='width: 1000px; height: 800px;'></div>
    <script type="text/javascript">
    var map;
    function initialize(centerlat, centerlong) {
      var mapOptions = {
        center: { lat: centerlat, lng: centerlong},
        zoom: 10
      };
      map = new google.maps.Map(document.getElementById('map'),
      mapOptions);
    }

    var infowindow = new google.maps.InfoWindow({
      size: new google.maps.Size(150,50)
    });
    var gmarkers = []
    function myclick(id) {
      google.maps.event.trigger(gmarkers[id], "click");
    }
    function createMarker(latlng, name, html, city, region, id) {
      var contentString = html;
      var marker = new google.maps.Marker({
        position: latlng,
        map: map,
        zIndex: Math.round(latlng.lat()*-100000)<<5
      });
      marker.metadata = {id: id}

      google.maps.event.addListener(marker, 'click', function() {
        infowindow.setContent("<b>" + name + "</b><p>" + 'at ' + contentString + '<br>' + city + ', ' + region);
        infowindow.open(map,marker);
        map.panTo(this.getPosition());
        map.setZoom(18);
      });
      // save the info we need to use later for the side_bar
      gmarkers[marker.metadata.id] = marker;
      // add a line to the side_bar html
      //  side_bar_html += '<a href="javascript:myclick(' + (gmarkers.length-1) + ')">' + name + '<\/a><br>';
    }

    $.ajax("/dashboard.json").success(function(res){
      google.maps.event.addDomListener(window, 'load', initialize(res[0].venue.latitude, res[0].venue.longitude));
      res.forEach(function(item){
        var point = new google.maps.LatLng(item.venue.latitude,item.venue.longitude);
        var marker = createMarker(point, item.artists[0].name, item.venue.name, item.venue.city, item.venue.region, item.id)
      })
    })
    $(function() {
      $(".map" ).on('click', function(e){
        google.maps.event.trigger(gmarkers[e.target.id], "click");
        e.preventDefault();
      });
    });
    </script>
  </div>

</div>

<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

  <div class="row">
    <div class="col-md-3">
      <ul class="list-group">
        <% @shows.each do |show| %>
          <li class="list-group-item">
              <h3><%= show["artists"].first["name"] %></h3>
              <h5><%= show["datetime"].to_date.strftime("%B %-d, %Y") %></h5>
              <h5>at <%= show["venue"]["name"] %></h5>
              <h5><%= show["venue"]["city"] %>, <%= show["venue"]["region"] %></h5>
              <h3>
                <% if show["ticket_status"] == "unavailable" %>
                  <%= "SOLD OUT" %>
                <% else %>
                  <a href="<%= show["ticket_url"] %>"><i class="fa fa-ticket"></i></a>
                <% end %>
              </h3>
            <% end %>
          </li>
      </ul>
    </div>

    <div class="col-md-9">
        <div id="map" style='width: 1000px; height: 800px;'></div>
      <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
      </script>
    </div>
  </div>

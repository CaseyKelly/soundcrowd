<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script>facebookShare();</script>

  <div class="row">
    <div class="col-md-3">
      <center>
        Sort by: <%= link_to "Artist", '/dashboard?sort=Artist' %>
        | <%= link_to "Venue", '/dashboard?sort=Venue' %>
        | <%= link_to "Date", '/dashboard?sort=Date' %>
        | <%= link_to "Tickets Available", '/dashboard?sort=TicketsAvailable' %>
      </center>
      <ul class="list-group">
        <% @shows.each do |show| %>
          <li class="list-group-item">
              <center><h3><%= show["artists"].first["name"] %></h3>
              <h3>
                <div class="pull-right">
                  <div id= "<%= show["url"] %>">  </div>
                  <div class="fb-share-button" data-href="<%= show["url"] %>" data-layout="button"></div>
                  <% if show["ticket_status"] == "available" %>
                    <h1><a href="<%= show["ticket_url"] %>"><i class="fa fa-ticket"></i></a></h1>
                    <% end %>
                </div>
              </h3>
              <h5><%= show["datetime"].to_datetime.strftime("%B %-d, %Y, %-l:%M %p") %></h5>
              <h5> <%= link_to show["venue"]["id"], "#{show["venue"]["url"]}" %> </h5>
              <h5>at <%= link_to show["venue"]["name"], "/venue?venue=#{show["venue"]["name"]}&city=#{show["venue"]["city"]}&region=#{show["venue"]["region"]}&venueid=#{show["venue"]["id"]}" %></h5>
              <h5><%= show["venue"]["city"] %>, <%= show["venue"]["region"] %></h5></center>
            <% end %>
          </li>
      </ul>
    </div>

    <div class="col-md-9">
        <div id="map" style='width: 1000px; height: 800px;'></div>
      <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
      </script>
    </div>
  </div>
